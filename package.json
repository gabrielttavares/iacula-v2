{
  "name": "iacula-v2",
  "version": "1.0.0",
  "description": "Cultivar Presen√ßa de Deus",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "tauri dev",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/assets/**/*\" \"src/presentation/**/*\" dist/",
    "watch": "tsc -w",
    "dev": "npm run build && tauri dev",
    "tauri": "tauri",
    "package": "tauri build",
    "package:mac": "tauri build --target universal-apple-darwin",
    "package:linux": "tauri build --target x86_64-unknown-linux-gnu"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^22.13.10",
    "fs-extra": "^11.3.0",
    "node-schedule": "^2.1.1",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.6.0",
    "@tauri-apps/cli": "^1.5.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node-schedule": "^2.1.7",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1"
  },
  "build": {
    "appId": "com.iacula.app",
    "productName": "Iacula",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/assets/**/*",
      "package.json"
    ]
  }
}